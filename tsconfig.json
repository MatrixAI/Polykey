{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2018",
    "baseUrl": "src/lib/",
    "paths": {
      "@polykey/*": ["*"],
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}

{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "module": "CommonJS",
    "baseUrl": "./src/lib",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "./src/lib/**/*",
    "./proto/js/**/*"
  ],
}
